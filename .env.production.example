# ============================================
# Variables d'environnement — Production
# Copiez ce fichier : cp .env.production.example .env.production
# Puis remplissez les valeurs
# ============================================

# === Base de données (Supabase ou PostgreSQL local) ===
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# === Serveur ===
NODE_ENV=production
PORT=3001

# === JWT (Générez des clés secrètes uniques !) ===
# Générer avec : openssl rand -hex 64
JWT_SECRET="CHANGEZ_MOI_avec_openssl_rand_hex_64"
JWT_REFRESH_SECRET="CHANGEZ_MOI_avec_openssl_rand_hex_64"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# === CORS ===
CORS_ORIGINS=https://it-inventory.com,https://www.it-inventory.com

# === Rate Limiting ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# === Upload ===
MAX_FILE_SIZE=5242880
