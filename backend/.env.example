# Variables d'environnement — Backend IT-Inventory

# Base de données Supabase PostgreSQL (partagée entre app web et mobile)
# Récupérez ces URLs depuis : Supabase Dashboard > Settings > Database
DATABASE_URL="postgresql://postgres:[MOT_DE_PASSE]@db.[PROJECT_REF].supabase.co:5432/postgres"
DIRECT_URL="postgresql://postgres:[MOT_DE_PASSE]@db.[PROJECT_REF].supabase.co:5432/postgres"

# JWT
JWT_SECRET="votre-secret-jwt-ultra-securise-changez-moi"
JWT_REFRESH_SECRET="votre-refresh-secret-ultra-securise-changez-moi"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Serveur
PORT=3001
NODE_ENV=development

# CORS — origines autorisées (séparées par virgule)
# Ajouter les domaines web ET mobile ici
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:8081"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
