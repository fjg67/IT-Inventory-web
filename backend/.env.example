# Variables d'environnement — Backend IT-Inventory

# Base de données PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/it_inventory?schema=public"

# JWT
JWT_SECRET="votre-secret-jwt-ultra-securise-changez-moi"
JWT_REFRESH_SECRET="votre-refresh-secret-ultra-securise-changez-moi"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Serveur
PORT=3001
NODE_ENV=development

# CORS — origines autorisées (séparées par virgule)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
